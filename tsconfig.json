{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}